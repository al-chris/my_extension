{
    "manifest_version": 3,
    "name": "My First Extension",
    "description": "This is a simple Chrome extension example.",
    "author": "al-chris",
    "version": "1.0.0",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["activeTab"],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  